<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground"
    tools:context=".ui.results.ResultsFragment">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/dynamic_content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
            <!-- Content will be added dynamically -->

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/button_sign_in"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/action_sign_in"
            android:visibility="gone"
            app:icon="@android:drawable/ic_menu_add"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_marginEnd="4dp"/>

        <Button
            android:id="@+id/button_achievements"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/action_achievements"
            android:visibility="gone"
            app:icon="@android:drawable/btn_star"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_marginStart="4dp"/>
            
        <Button
            android:id="@+id/button_backup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/results_backup"
            android:visibility="gone"
            app:icon="@android:drawable/ic_menu_save"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_marginStart="4dp"/>
            
        <Button
            android:id="@+id/button_restore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/results_restore"
            android:visibility="gone"
            app:icon="@android:drawable/ic_menu_upload"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_marginStart="4dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
